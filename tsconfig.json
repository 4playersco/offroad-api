{
  "compilerOptions": {
    "target": "es2020",
    // "module": "esnext",
    "lib": ["es2020"],
    "outDir": "build/",
    "rootDir": "./",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    // TSX
    "module": "Preserve",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "isolatedModules": true,
    // Kysely
    "strict": true
  }
}
