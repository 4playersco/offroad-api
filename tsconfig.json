{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020"],
    "outDir": "build/",
    "rootDir": "./",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
