{
  "name": "offroad-api-2024",
  "private": true,
  "version": "2.0.0",
  "author": "Craig Freeman <craigfreeman@gmail.com>",
  "license": "MIT",
  "description": "API for the 4-playersofcolorado.org membership website",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --pretty --respawn ./src/app.ts",
    "build": "tsc --outdir ./build",
    "start": "NODE_ENV=production ./build/app.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "prettier-format": "run-script-os",
    "prettier-watch": "run-script-os",
    "db:dev": "docker compose -f docker-compose.dev.yml up --build",
    "db:seed": "ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/.bin/knex seed:run",
    "db:migrate": "ts-node ./node_modules/.bin/knex migrate:latest",
    "db:clean": "docker compose down -v",
    "db:create-migration": "ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/.bin/knex migrate:make",
    "db:create-seed": "ts-node -O '{\"module\": \"commonjs\"}' ./node_modules/.bin/knex seed:make",
    "gql:gen": "graphql-codegen --config codegen.ts",
    "generate-pw": "ts-node -P ./scripts/tsconfig.json ./scripts/passwords/generate-hashed-password.ts",
    "compare-pw": "ts-node -P ./scripts/tsconfig.json ./scripts/passwords/compare-passwords.ts",
    "generate-token": "ts-node -P ./scripts/tsconfig.json ./scripts/passwords/generate-token.ts",
    "generate-cookie": "ts-node -P ./scripts/tsconfig.json ./scripts/passwords/generate-cookie.ts",
    "generate-cuid": "ts-node -P ./scripts/tsconfig.json ./scripts/users/generate-cuid.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@bugsnag/cuid": "^3.1.1",
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie": "^0.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "date-fns": "^3.6.0",
    "date-fns-timezone": "^0.1.4",
    "dotenv": "^16.4.5",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "ical-generator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mysql2": "^3.10.3",
    "nodemailer": "^6.9.14",
    "stripe": "^16.2.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.2",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bugsnag__cuid": "^3.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.17.7",
    "@types/mailchimp__mailchimp_marketing": "^3.0.20",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.14.11",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.0",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.4.0",
    "nodemon": "^3.1.4",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "run-script-os": "^1.1.6",
    "ts-jest": "^29.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  },
  "type": "module"
}
